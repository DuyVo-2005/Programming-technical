#include<iostream>
using namespace std;
#include<vector>
#include<algorithm>
bool compare(int x, int y){
	return x>y;
}
int main(int argc, char *argv[])
{
	int n;
	cin>>n;
	vector<int>a(n);
	for(int i=0;i<n;i++)
		cin>>a[i];
	sort(a.begin(),a.end(),compare);//sap giam
	
	long long gia=0;
	for(int i=0;i<a.size();i++)
		gia+=a[i];
	for(int i=2;i<n;i+=3)
		gia-=a[i];
	cout<<gia;
		
	return 0;
}
//sap giam gia cac goi hang , bo goi co chi so 3, 6, 9,... <=n quyen sach
/*in:
7
10 3 2 4 6 4 9
out: 29*/
/*in:
4
3 2 3 2
out: 8*/
